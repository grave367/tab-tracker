{
  "manifest_version": 3,
  "name": "tab tracker",
  "version": "1.0",
  "description": "extension to display the total number of open tabs across all windows, for those late night sessions, toiling in the salt mines",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Counter",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html"
}
